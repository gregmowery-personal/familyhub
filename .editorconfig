# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript and TypeScript files
[*.{js,jsx,ts,tsx,json}]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# CSS and preprocessors
[*.{css,scss,sass,less}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_size = 4

# Configuration files
[*.{ini,toml}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Prettier config
[.prettierrc*]
indent_size = 2